<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackapp"
    tools:context=".confirServicio">


    <ImageView
        android:id="@+id/imageViewConf"
        android:layout_width="148dp"
        android:layout_height="152dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <TextView
        android:id="@+id/textViewConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXITO"
        android:textColor="@color/whiteapp"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewMensajeConf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConf"
        app:layout_constraintVertical_bias="0.27" />

    <Button
        android:id="@+id/buttonRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#f8f8f8"

        android:text="Regresar"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#FFB400" />

    <TextView
        android:id="@+id/textViewMensajeConf"
        android:layout_width="327dp"
        android:layout_height="62dp"
        android:text="Ya se pueden comunicar unx con lx otrx"
        android:textAlignment="center"
        android:textColor="@color/whiteapp"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConf"
        app:layout_constraintVertical_bias="0.537" />

</androidx.constraintlayout.widget.ConstraintLayout>