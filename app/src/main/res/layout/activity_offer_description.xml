<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackapp"
    android:orientation="vertical"
    tools:context=".offerDescription">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/volverBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back"
            app:tint="@color/yellowapp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="53dp"
            android:layout_gravity="center"
            android:src="@drawable/logowhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/app_name"
            android:textColor="@color/j_hueso"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Contratar Servicio"
        android:textSize="30sp"
        android:textColor="@color/j_hueso"
        android:fontFamily="@font/montserrat_bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:innerRadius="0dp"
        android:layout_gravity="center"

        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="60dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/offer_userimg"
                android:layout_width="146dp"
                android:layout_height="156dp"
                android:scaleType="centerCrop"
                android:src="@drawable/exampleuser"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/offer_verificado_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="No Verificado"
        android:textColor="@color/d_blue3"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/offer_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/placeholderUser"
        android:textSize="17sp"
        android:textColor="@color/j_hueso"
        android:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="65dp"
        android:text="Disponibilidad"
        android:textSize="18sp"
        android:textColor="@color/yellowapp"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/offer_datejob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="L     M     X     J     V     S     D"
        android:layout_gravity="center"
        android:textSize="21sp"
        android:textColor="@color/j_hueso"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="65dp"
        android:text="Tipo de Trabajo"
        android:textSize="18sp"
        android:textColor="@color/yellowapp"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/offer_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/placeholderWork"
        android:textSize="20sp"
        android:textColor="@color/j_hueso"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="65dp"
        android:text="DescripciÃ³n del Trabajo"
        android:textSize="18sp"
        android:textColor="@color/yellowapp"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/offer_job_descip"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="60dp"
        android:text="@string/lorem_ipsun"
        android:scrollbars="vertical"
        android:textSize="15sp"
        android:textColor="@color/j_hueso"/>

    <Button
        android:id="@+id/offer_button_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Contratar"
        android:backgroundTint="@color/d_blue2"
        />

</LinearLayout>