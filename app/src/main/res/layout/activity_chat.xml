<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:background="#E4E3E3">

    <LinearLayout
        android:background="@color/blackapp"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatuserimage"
            android:layout_marginTop="10dp"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/exampleuser" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/chatusername"
                android:textColor="@color/whiteapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="User chat name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/chatlastseen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Visto Ultimavez"
                android:textColor="@color/whiteapp" />
        </LinearLayout>


    </LinearLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/message_swipe_layout"
        android:layout_width="410dp"
        android:layout_height="528dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.549">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesList"
            android:layout_width="415dp"
            android:layout_height="531dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.539" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout

        android:layout_width="406dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/chatadd"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:src="@drawable/ic_add" />

        <EditText
            android:id="@+id/chatMessage"
            android:layout_width="252dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="Mensaje  "
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingTop="12dp"
            android:paddingEnd="160dp"
            android:paddingBottom="12dp"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/chatsend"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:src="@drawable/ic_send" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>