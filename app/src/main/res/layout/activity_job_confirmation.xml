        android:textColor="@color/whiteapp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutBtnConf"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutBtnConf"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutBtnConf"
