    <LinearLayout
        android:id="@+id/linearLayoutBtnConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:divider="@drawable/empty_short_divider"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/completeJobConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#4CAF50"
            android:padding="15dp"
            android:text="Trabajo completado"
            android:textSize="23dp"
            app:rippleColor="#247D28"
            app:strokeColor="@color/blueapp" />

        <Button
            android:id="@+id/cancelJobConf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#F44336"
            android:text="Cancelar\ntrabajo"
            android:textSize="15dp"
            app:icon="@drawable/ic_dangerous_white"
            app:rippleColor="#C21104"
            app:strokeColor="@color/blueapp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Trabajo en progreso"
        android:textAlignment="center"
        android:textColor="@color/whiteapp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/waitingTextV"
