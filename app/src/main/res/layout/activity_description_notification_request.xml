    <LinearLayout
        android:id="@+id/linearLayoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/rejectJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#F44336"
            android:text="Rechazar\ntrabajo"
            android:textSize="15dp"
            app:icon="@drawable/ic_checked"
            app:rippleColor="#C21104"
            app:strokeColor="@color/blueapp" />

        <Button
            android:id="@+id/acceptJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#4CAF50"
            android:text="Aceptar\nTrabajo"
            android:textSize="15dp"
            app:icon="@drawable/ic_checked"
            app:rippleColor="#247D28"
            app:strokeColor="@color/blueapp" />

    </LinearLayout>

    <TextView
